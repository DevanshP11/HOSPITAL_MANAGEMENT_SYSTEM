<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hospital.UpdatePatientController"
            stylesheets="@updatePatient.css">
    
    <top>
        <HBox alignment="CENTER" spacing="15" styleClass="search-bar">
            <Label text="Patient ID" styleClass="label-search" />
            <TextField fx:id="patientIdField" prefWidth="150" promptText="Enter Patient ID to Search" />
            <Button text="Search" onAction="#onSearchClick" styleClass="button-search" />
        </HBox>
    </top>
    
    <center>
        <GridPane styleClass="form-grid" hgap="20" vgap="15">
            <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="nameField" promptText="Full Name" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            
            <Label text="Contact No." GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="contactField" promptText="Contact Number" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            
            <Label text="Age" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="ageField" promptText="Age" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            
            <Label text="Gender" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <ComboBox fx:id="genderComboBox" promptText="Select Gender" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            
            <Label text="Blood Group" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <TextField fx:id="bloodGroupField" promptText="Blood Group" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            
            <Label text="Address" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <TextField fx:id="addressField" promptText="Address" GridPane.rowIndex="5" GridPane.columnIndex="1" />
            
            <Label text="Major Disease Suffered Earlier" GridPane.rowIndex="6" GridPane.columnIndex="0" />
            <TextField fx:id="diseaseField" promptText="Previous Major Diseases" GridPane.rowIndex="6" GridPane.columnIndex="1" />
        </GridPane>
    </center>
    
    <bottom>
        <HBox spacing="15" alignment="CENTER_RIGHT" styleClass="button-bar">
            <Button text="Update" onAction="#onUpdateClick" styleClass="button-update" />
            <Button text="Close" onAction="#onCloseClick" styleClass="button-close" />
        </HBox>
    </bottom>
</BorderPane>