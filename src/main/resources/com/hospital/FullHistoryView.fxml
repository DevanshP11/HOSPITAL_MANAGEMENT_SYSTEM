<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hospital.FullHistoryController"
            stylesheets="@fullHistory.css">
    
    <center>
        <TableView fx:id="historyTable" 
                   BorderPane.alignment="CENTER"
                   minHeight="450" >
            <BorderPane.margin>
                <Insets top="10" right="10" bottom="10" left="10" />
            </BorderPane.margin>
        </TableView>
    </center>
    
    <bottom>
        <Button text="Close" 
                onAction="#onCloseClick" 
                styleClass="button-close" 
                BorderPane.alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets bottom="10" right="20" />
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>