<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.hospital.AddDiagnosisController"
            stylesheets="@addDiagnosis.css">
    
    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="search-bar">
            <Label text="Patient ID" />
            <TextField fx:id="patientIdField" prefWidth="150" promptText="Enter Patient ID" />
            <Button text="Search" onAction="#onSearchClick" styleClass="button-search" />
        </HBox>
    </top>
    
    <center>
        <TableView fx:id="patientTable" styleClass="patient-table" minHeight="100" maxHeight="100" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10" left="20" right="20" />
            </BorderPane.margin>
        </TableView>
    </center>
    
    <bottom>
        <GridPane styleClass="diagnosis-grid" hgap="20" vgap="15">
            <columnConstraints>
                <javafx.scene.layout.ColumnConstraints minWidth="150" prefWidth="150" />
                <javafx.scene.layout.ColumnConstraints minWidth="250" prefWidth="250" />
                <javafx.scene.layout.ColumnConstraints minWidth="100" prefWidth="100" />
                <javafx.scene.layout.ColumnConstraints minWidth="150" prefWidth="150" />
            </columnConstraints>
            
            <Label fx:id="idNotFoundLabel" text="Patient ID Does Not Exist!" visible="false" styleClass="error-label" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0" />
            
            <Label text="Symptoms" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="symptomsField" promptText="Enter symptoms" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            
            <Label text="Diagnosis" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <TextField fx:id="diagnosisField" promptText="Enter final diagnosis" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            
            <Label text="Medicines" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="medicinesField" promptText="Enter prescribed medicines" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            
            <Label text="Ward Required?" GridPane.rowIndex="1" GridPane.columnIndex="2" />
            <CheckBox fx:id="wardCheckBox" text="Yes" onAction="#onWardCheckBoxChange" GridPane.rowIndex="1" GridPane.columnIndex="3" />
            
            <Label fx:id="wardTypeLabel" text="Type of Ward" visible="false" GridPane.rowIndex="2" GridPane.columnIndex="2" />
            <ComboBox fx:id="wardComboBox" visible="false" promptText="Select Ward Type" GridPane.rowIndex="2" GridPane.columnIndex="3" />
            
            <HBox spacing="15" alignment="CENTER_RIGHT" GridPane.rowIndex="4" GridPane.columnIndex="2" GridPane.columnSpan="2">
                <Button text="Save" onAction="#onSaveClick" styleClass="button-save" />
                <Button text="Close" onAction="#onCloseClick" styleClass="button-close" />
            </HBox>
        </GridPane>
    </bottom>
</BorderPane>